#include <iostream>

using namespace std;

int main() {
    int T;
    cin >> T;

    while (T--) {
        int N, X, D;
        cin >> N >> X >> D;

        int bunRequirement = X;

        if (N >= bunRequirement * D) {
            cout << D << endl;
        } else {
            int daysWithAvailableBuns = N / bunRequirement;
            cout << daysWithAvailableBuns << endl;
        }
    }

    return 0;
}
